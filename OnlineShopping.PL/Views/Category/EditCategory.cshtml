@model OnlineShopping.BL.Model.CategoryVM
@{
    ViewData["Title"] = "Edit";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title"> Edit Category</h5>

        <!-- Vertical Form -->
        <form class="row g-3" asp-action="EditCategory" asp-controller="Category">
            <div asp-validation-summary="All"></div>
            <div class="col-12">
                <label asp-for="Id" class="form-label">Category Id</label>
                <input asp-for="Id" type="text" class="form-control" disabled>
            </div>
            <div class="col-12">
                <label asp-for="Name" class="form-label">Category Name</label>
                <input asp-for="Name" type="text" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="text-center">
                <input type="submit" class="btn btn-primary" value="Submit">
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Category">Back To Data</a>
            </div>
        </form><!-- Vertical Form -->

    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

