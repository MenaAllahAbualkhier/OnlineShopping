@model OnlineShopping.BL.Model.ItemVM 
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
  <form asp-action="Details" >
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
            <div class="col-lg-5 mb-30">

                <img class="w-100 h-100" src="~/Item/@Model.ImageName" alt="Image">

            </div>

            <div class="col-lg-7 h-auto mb-30">
                <div class="h-100 bg-light p-30">
                    <h3>@Model.Name</h3>
                    <div class="d-flex mb-3">
                        <div class="text-primary mr-2">
                            <small class="fas fa-star"></small>
                            <small class="fas fa-star"></small>
                            <small class="fas fa-star"></small>
                            <small class="fas fa-star-half-alt"></small>
                            <small class="far fa-star"></small>
                        </div>
                        <small class="pt-1">(99 Reviews)</small>
                    </div>
                    <h3 class="font-weight-semi-bold mb-4">Price:@Model.price</h3>
                    @{
                        var x = Model.price - Model.discount;
                    }
                    <h3 class="font-weight-semi-bold mb-4">after discount:@x</h3>
                    <p class="mb-4">
                        @Model.Descrption
                    </p>
                    @{
                        if (Model.Count > 0)
                        {
                          
                            <input type="hidden"asp-for="@Model.Id">
                            <input type="hidden" asp-for="@Model.SubCategoryId">
                            <label asp-for="@Model.Count">Count :</label>
                            <input type="number" max="@Model.Count" min="1" value="1" id="test" asp-for="@Model.Quantity" />
                            <br />
                            <label>Available Item Is :@Model.Count</label>
                            <br />
                            <br />
                            <i class="fa fa-shopping-cart mr-1"></i>
                            <input type="submit" class="btn btn-primary px-3" value="Add To Cart">
                            

                        }
                        else
                        {
                            <label>Not Available</label>
                        }
                    }


                </div>

            </div>
        </div>
    </div>
    

</form>