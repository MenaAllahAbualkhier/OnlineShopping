@model IEnumerable<OnlineShopping.BL.Model.SubCategoryVM>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!-- Products Start -->
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Featured Products</span></h2>
    <div class="row px-xl-5">
       
            
        @foreach(var item in Model){
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1" >
                <a asp-action="Item" asp-route-Id="@item.Id">
                    <div class="product-item bg-light mb-4">
                        <div class="product-img position-relative overflow-hidden card">
                            <img class="img-fluid card-img-top " style="height:350px" src="~/Sub-Item/@item.ImageName" alt="">

                        </div>
                        <div class="text-center py-4">
                            <a asp-action="Item" asp-route-Id="@item.Id" class="h6 text-decoration-none text-truncate">@item.Name</a>
                        </div>
                    </div>
               </a>
            </div>

        }</div>
</div>
<!-- Products End -->
