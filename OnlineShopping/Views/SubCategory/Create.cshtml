@model OnlineShopping.BL.Model.SubCategoryVM

@{
    ViewData["Title"] = "Create";
    var cate = ViewBag.category;
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title"> Create New SubCategory</h5>

        <!-- Vertical Form -->
        <form class="row g-3" asp-action="Create" asp-controller="SubCategory" enctype="multipart/form-data">
            <div class="col-12">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" type="text" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Image" class="form-label">Image </label>
                <input asp-for="Image" type="File" class="form-control">
              
            </div>
            <input asp-for="CategoryId" type="hidden" value="@cate" class="form-control">
            <div class="text-center">
                <input type="submit" class="btn btn-primary" value="Create">
                <a class="btn btn-secondary" asp-action="Index" asp-controller="SubCategory">Back To Data</a>
            </div>
        </form><!-- Vertical Form -->

    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

